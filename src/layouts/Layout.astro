---
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro Basics - Data Visualization</title>
  </head>

  <body>
    <!-- Header avec navigation principale -->
    <header class="bg-white shadow-md border-b">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center py-4">
          <!-- Logo/Titre -->
          <div class="flex items-center">
            <a href="/" class="text-2xl font-bold text-gray-900">
              📊 Data Viz
            </a>
          </div>

          <!-- Navigation principale -->
          <nav class="hidden md:flex space-x-8">
            <a href="/" class="text-gray-700 hover:text-blue-600 px-3 py-2 text-sm font-medium transition-colors">
              🏠 Accueil
            </a>
            
            <!-- Dropdown Pingouins -->
            <div class="relative group">
              <button class="text-gray-700 hover:text-blue-600 px-3 py-2 text-sm font-medium transition-colors flex items-center">
                🐧 Pingouins
                <svg class="ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                </svg>
              </button>
              <div class="absolute left-0 mt-2 w-48 bg-white rounded-md shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-10">
                <div class="py-1">
                  <a href="/slider" class="block px-4 py-2 text-sm text-gray-700 hover:bg-blue-50 hover:text-blue-600">📊 Vue d'ensemble</a>
                  <a href="/rendu-dynamique" class="block px-4 py-2 text-sm text-gray-700 hover:bg-blue-50 hover:text-blue-600">🔍 Rendu dynamique</a>
                  <a href="/rendu-statique" class="block px-4 py-2 text-sm text-gray-700 hover:bg-blue-50 hover:text-blue-600">📄 Rendu statique</a>
                </div>
              </div>
            </div>

            <!-- Dropdown Voitures -->
            <div class="relative group">
              <button class="text-gray-700 hover:text-blue-600 px-3 py-2 text-sm font-medium transition-colors flex items-center">
                🚗 Voitures
                <svg class="ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                </svg>
              </button>
              <div class="absolute left-0 mt-2 w-48 bg-white rounded-md shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-10">
                <div class="py-1">
                  <a href="/cars-slider" class="block px-4 py-2 text-sm text-gray-700 hover:bg-blue-50 hover:text-blue-600">📊 Vue d'ensemble</a>
                  <a href="/cars-dynamique" class="block px-4 py-2 text-sm text-gray-700 hover:bg-blue-50 hover:text-blue-600">🔍 Rendu dynamique</a>
                  <a href="/cars-statique" class="block px-4 py-2 text-sm text-gray-700 hover:bg-blue-50 hover:text-blue-600">📄 Rendu statique</a>
                </div>
              </div>
            </div>
          </nav>
          </div>
        </div>
      </div>
    </header>

    <!-- Contenu principal -->
    <main class="min-h-screen bg-gray-50">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="bg-gray-800 text-white py-8">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <p class="text-sm text-gray-400">
            Projet Astro - Visualisation de données avec Observable Plot
          </p>
          <div class="mt-2 flex justify-center space-x-6">
            <span class="text-xs text-gray-500">🐧 Dataset: Palmer Penguins</span>
            <span class="text-xs text-gray-500">🚗 Dataset: Auto MPG</span>
          </div>
        </div>
      </div>
    </footer>

    <!-- Script pour le menu mobile -->
    <script>
      const mobileMenuButton = document.getElementById('mobile-menu-button');
      const mobileMenu = document.getElementById('mobile-menu');

      if (mobileMenuButton && mobileMenu) {
        mobileMenuButton.addEventListener('click', () => {
          mobileMenu.classList.toggle('hidden');
        });
      }
    </script>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
